{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "semi": [
      "error",
      "always"
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/extensions": [
      0,
      "never"
    ],
    "import/no-unresolved": [
      2,
      { "caseSensitive": false }
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": "webpack.config.js"
    }
  }
}